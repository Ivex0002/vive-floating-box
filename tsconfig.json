{
  "compilerOptions": {
    "allowJs": true,      
    "checkJs": true,       
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "emitDeclarationOnly":true,
    "allowImportingTsExtensions":true,
  },
  "include": ["src/**/*"]
}
